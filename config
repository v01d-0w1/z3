set $bg-color 	         #009a1f
set $inactive-bg-color   #006614
set $text-color          #000000
set $inactive-text-color #111111
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #009a1f
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #009a1f
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #009a1f
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #009a1f

default_border pixel 10

